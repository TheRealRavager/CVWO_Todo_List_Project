<%= form_with(model: user, local: true) do |form| %>
  <%= render 'error_list', object: user %>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

	<%# Only admins can create / edit roles%>
	<% if check_admin %>
	<div class="field">
    <%= form.label :role %>
    <%= form.text_field :role %>
  </div>
	<% end %>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
