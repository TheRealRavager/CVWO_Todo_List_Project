<h1>Here are all your tasks!</h1>
<p>This is where all the tasks should go eventually</p>

<ul> <%# Displays every single task title%>
	<% @tasks.each do |task| %>
		<li> 
			<p><strong><%= task.title %></strong></p>
			<p><em><%= task.details %></em></p>
			<%= link_to 'Edit Task', edit_task_path(task) %>
			<%= link_to 'Delete Task', task_path(task), method: :delete %>
		</li>
	<% end %>
</ul>

<%= link_to "Create Task:", tasks_new_path %>